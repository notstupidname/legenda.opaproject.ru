<meta name="description" content="{{ description }}">
<link rel="canonical" href="{{ page.url | toAbsoluteUrl }}">
{% if layout == "layouts/post.liquid" %}
<meta name="author" content="{{ config.authorName }}">
<meta property="og:type" content="article">
<meta property="article:publisher" content="{{ config.name }}">
<meta property="article:published_time" content="{{page.date}}">
{% else %}
<meta name="author" content="{{ config.name }}">
<meta property="og:type" content="website">
{% endif %}
<meta property="og:title" content="{{ title }}">
<meta property="og:locale" content="{{ config.locale }}">
<meta property="og:description" content="{{ description }}">
<meta property="og:url" content="{{ page.url | toAbsoluteUrl }}">
<meta property="og:site_name" content="{{ config.name }}">
<meta property="og:image" content="{{ image | toAbsoluteUrl }}">
<meta name="twitter:card" content="summary_large_image">
<meta property="twitter:image" content="{{ image | toAbsoluteUrl }}">
<meta property="twitter:title" content="{{ title }}">
{%if page.url == "/"%}
<script type="application/ld+json">
{
"@context":"https://schema.org",
"@type":"WebSite",
"description":"{{ description }}",
"headline":"{{ title }}",
"image":"{{ image | toAbsoluteUrl }}",
"name":"{{ config.name }}",
"author":
{
    "@type":"Organization",
    "name": "{{ config.name }}",
    "sameAs": [{%- for item in config.social -%}"{{ item }}"{%-unless forloop.last-%},{%-endunless-%}{%- endfor -%}],
    "logo":
        {
        "@type":"ImageObject",
        "url":"{{ config.logo | toAbsoluteUrl }}"
        }
},
"url":"{{ page.url | toAbsoluteUrl }}"
}
</script>
{% elsif layout == "layouts/post.liquid" %}
<script type="application/ld+json">
{
"@context":"https://schema.org",
"@type":"Article",
"headline":"{{ title }}",
"description":"{{ description }}",
"datePublished": "{{page.date}}",
"inLanguage": "{{ config.locale }}",
"image":"{{ image | toAbsoluteUrl }}",
"name":"{{ title }}",
"author":
{
    "@type":"Person",
    "name": "{{ config.authorName }}",
    "url": "{{ config.aboutURL | toAbsoluteUrl }}",
    "sameAs": [{%- for item in config.social -%}"{{ item }}"{%-unless forloop.last-%},{%-endunless-%}{%- endfor -%}]
},
"url":"{{ page.url | toAbsoluteUrl }}",
"isPartOf" : {
    "@type": "WebPage",
    "url": "{{ page.url | toAbsoluteUrl }}",
    "name": "{{ title }}",
    "description":"{{ description }}",
    "datePublished": "{{page.date}}",
    "inLanguage": "{{ config.locale }}",
    "image":"{{ image | toAbsoluteUrl }}",
    "isPartOf" : {
        "@type":"WebSite",
        "description":"{{ config.defaultDescription }}",
        "name":"{{ config.name }}",
        "url":"{{ config.baseUrl | toAbsoluteUrl }}",
        "inLanguage": "{{ config.locale }}"
    }
}
}
</script>
{% else %}
<script type="application/ld+json">
{
"@context":"https://schema.org",
"@type":"WebPage",
"url": "{{ page.url | toAbsoluteUrl }}",
"name": "{{ title }}",
"description":"{{ description }}",
"datePublished": "{{page.date}}",
"inLanguage": "{{ config.locale }}",
"image":"{{ image | toAbsoluteUrl }}",
"author":
{
    "@type":"Organization",
    "name": "{{ config.name }}",
    "sameAs": [{%- for item in config.social -%}"{{ item }}"{%-unless forloop.last-%},{%-endunless-%}{%- endfor -%}],
    "logo":
        {
        "@type":"ImageObject",
        "url":"{{ config.logo | toAbsoluteUrl }}"
        }
},
"isPartOf" : {
    "@type":"WebSite",
    "description":"{{ config.defaultDescription }}",
    "name":"{{ config.name }}",
    "url":"{{ config.baseUrl | toAbsoluteUrl }}",
    "inLanguage": "{{ config.locale }}"
}
}
</script>
{% endif %}