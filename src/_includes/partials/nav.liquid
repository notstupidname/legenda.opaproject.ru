<nav>
  {% assign navPages = collections.menu | eleventyNavigation: 'index' %}
  <ul>
  {%- for entry in navPages %}
  <li{% if entry.url == page.url %} class="current"{% endif %}>
    <a href="{{ entry.url }}">{{ entry.title }}</a>
    {%- if entry.children.length > 0 -%}
    <ul{% if page.url contains entry.url %} class="open"{% endif %}>
      {%- for child in entry.children %}
      <li{% if page.url contains child.url %} class="current"{% endif %}>
        <a href="{{ child.url }}">{{ child.title }}</a>
      </li>
      {% endfor -%}
    </ul>
    {%- endif -%}
  </li>
  {%- endfor %}
  </ul>
</nav>